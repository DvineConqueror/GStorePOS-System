{
  "watch": ["src"],
  "ext": "ts,json",
  "ignore": ["src/**/*.spec.ts", "src/**/*.test.ts"],
  "exec": "ts-node --transpile-only src/server.ts",
  "env": {
    "NODE_ENV": "development",
    "NODE_OPTIONS": "--max-old-space-size=512"
  },
  "delay": 2000,
  "restartable": "rs",
  "verbose": false,
  "signal": "SIGTERM",
  "killTimeout": 5000
}
